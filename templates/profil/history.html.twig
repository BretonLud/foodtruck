{% extends 'users.html.twig' %}

{% block title 'Historique de commande' %}

{% block body %}

    <div class="history">
        {% for command in commandes %}
        <div class="form">
            <div>
                <div style="display: flex">
                    <p class="col-1 commande-reference">N° {{ command.reference }}</p>
                    <p class="col-1" style="text-align: right">{{ command.createdAt|date("m/d/Y, H:i") }}</p>
                </div>
                {% for produit in command.orderProduits %}
                <div style="display: flex">
                    <p class="col-1">{{ produit.produits.name }}</p>
                    <p style="width: 2em">{{ produit.quantity }} x </p>
                    <p>{{ produit.produits.prix }} €</p>
                </div>
                {% endfor %}
                <div style="display: flex; justify-content: right">
                   <p>Total : {{ command.price }} €</p>
                </div>
            </div>
        </div>

        {% endfor %}
        <div class="navigation">
            {{ knp_pagination_render(commandes,'profil/pagination.html.twig') }}
        </div>
    </div>
{% endblock %}