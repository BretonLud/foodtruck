{% extends 'users.html.twig' %}

{% block title 'Historique de commande' %}

{% block body %}
    <div class="history">
        {% for command in commands %}
        <div class="form">
            <div>
                <div style="display: flex">
                    <p class="col-1 commande-reference">N° {{ command.order.reference }}</p>
                    <p class="col-1" style="text-align: right">{{ command.order.createdAt|date("m/d/Y, H:i") }}</p>
                </div>
                {% for produit in command.produits %}
                <div style="display: flex">
                    <p class="col-1">{{ produit.produit.name }}</p>
                    <p style="width: 2em">{{ produit.quantity }} x </p>
                    <p>{{ produit.produit.prix }} €</p>
                </div>
                {% endfor %}
                <div style="display: flex; justify-content: right">
                   <p>Total : {{ command.order.price }} €</p> 
                </div>
            </div>
        </div>

        {% endfor %}
    </div>
{% endblock %}