{% extends 'users.html.twig' %}

{% block title 'Historique de commande' %}

{% block body %}

    <div id="history" class="history">
        {% for command in commandes %}
        <div class="form form-history">
            <div>
                <div class="orders__order">
                    <p class="col-1 commande-reference">N° {{ command.reference }}</p>
                    <p class="col-1 text-right">{{ command.createdAt|date("m/d/Y, H:i") }}</p>
                </div>
                {% for produit in command.orderProduits %}
                <div class="orders__order">
                    <p class="col-1">{{ produit.produits.name }}</p>
                    <p class="order-qty">{{ produit.quantity }} x </p>
                    <p>{{ produit.produits.prix }} €</p>
                </div>
                {% endfor %}
                <div class="orders__order order-total">
                   <p>Total : {{ command.price }} €</p>
                </div>
            </div>
        </div>

        {% endfor %}
    </div>
    <div class="navigation">
        {{ knp_pagination_render(commandes,'profil/pagination.html.twig') }}
    </div>
{% endblock %}

